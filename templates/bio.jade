
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.metadata.name + " - "}

block header
  h1(style="font-style: normal;")= page.metadata.name
  p.author
    a(href=page.metadata.twitter) Twitter
    | •
    a(href=page.metadata.site) Site

block content
  article.article
    section.content()= page.metadata.bio
      img(src=locals.url + '/img/essentials/' + page.metadata.short + '.png')


block prepend footer
  div.nav
    a(href=contents.index.url) « Main page
