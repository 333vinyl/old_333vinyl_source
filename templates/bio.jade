
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  h1(style="font-style: normal;")= page.metadata.name
  p.author
    a(href=page.metadata.twitter) Twitter
    | •
    a(href=page.metadata.site) Site

block content
  article.article
    section.content= page.metadata.bio

block prepend footer
  div.nav
    a(href=contents.index.url) « Full blog
    a(href="https://twitter.com/share" class="twitter-share-button" data-via="333vinyl" data-count="none" data-dnt="true") Tweet
.script
!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');
