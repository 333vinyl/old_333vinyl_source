
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    | #{ "Written by " }
    mixin author(page.metadata.author)
  div.details
    img(src=page.metadata.artwork)
    div.albumartist
      p.artist= page.metadata.artist
      p.album= page.metadata.album
    if page.metadata.score >= 4.5
      p.score_red= page.metadata.score
    if page.metadata.score < 4.5
      p.score= page.metadata.score
    p.labelrelease
      | #{page.metadata.label}
      br
      | #{page.metadata.release}
    p.p4k
      | Predicted Pitchfork score: <strong>#{page.metadata.p4k}</strong>

block content
  article.article
    section.content!= typogr(page.html).typogrify()

block prepend footer
